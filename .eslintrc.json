{
    "env": {
      "es6": true,
      "node": true
    },
    "plugins": ["import", "node", "promise", "standard"],
    "extends": ["eslint:recommended"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "comma-dangle": [
        "error",
        {
          "arrays": "never",
          "imports": "never",
          "exports": "never",
          "functions": "ignore",
          "objects": "always-multiline"
        }
      ]
    }
  }